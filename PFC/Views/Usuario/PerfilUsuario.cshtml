
@{
    ViewBag.Title = "PerfilUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="sub-title">
    <h2>About Me</h2>
    <a href="contact.html"><i class="icon-envelope"></i></a>
</div>

<script>
    var PerfilUsuario = { Id:@ViewBag.UsuarioId}

    localStorage.setItem('PerfilUsuario', JSON.stringify(PerfilUsuario));

</script>


<div class="col-md-12 content-page" ng-controller="amizadeCtrl">

    <div class="col-md-9 blog-post">

        <div>
            <img src="../Upload/{{PerfilUsuario.UploadArquivo.Caminho}}" alt="">
        </div>
        <!-- My Intro Start -->
        <div class="post-title margin-bottom-30">
            <div class="form-group">
                Ola, Eu Sou o <input type="text" value="{{PerfilUsuario.Nome}}" />

                <br />
            </div>
            <h3>Portardor do RGM:{{PerfilUsuario.RGM}}</h3>
            <br />
            <h4>Email: {{PerfilUsuario.Email}}</h4>

            <ul class="knowledge">
                <li class="bg-color-{{PerfilUsuario.Auth.Id}}">{{PerfilUsuario.Auth.Permissao}}</li>
            </ul>

        </div>
        <!-- My Intro End -->


        <p class='post-info'>Estou presente no forum desde {{PerfilUsuario.DataCad}}</p>



        <!-- Video Start -->
        <!-- Video End -->
        <!-- My Service Start -->
        <div class="post-title">
            <h1>My <span class="main-color">Services</span></h1>
        </div>

        <div class="list list-style-2 margin-top-30">
            <ul>
                <li>Website Design</li>
                <li>Website Development</li>
                <li>Wordpress Theme Development</li>
                <li>Mobile Apps UI/UX Design</li>
                <li>Online Software Development</li>
                <li>E-commerce Development</li>
                <li>UI/UX Consulting</li>
            </ul>
        </div>
        <!-- My Service End -->
        @*Verifica se usuario nao é ele mesmo*@
        <div ng-if="(ModelUsuario.Id != PerfilUsuario.Id)">
            <div ng-if="(valAmi)">
                <button ng-click="cancelaAmizade(PerfilUsuario)" class="btn btn-lg btn-danger">Cancelar amizade</button>

            </div>
            <div ng-if="(!valAmi)">
                <button ng-click="conviteAmizade(PerfilUsuario)" class="btn btn-lg btn-primary">Adicionar Usuario</button>
            </div>
        </div>
    </div>
    <div class="col-md-3 blog-post">
        <button type="button" class="btn btn-primary editarbotao" data-toggle="modal" data-target="#exampleModalCenter">
            <i class="fas fa-pencil-alt fa-2x"></i>
        </button>
    </div>



    <div class="modal fade bd-example-modal-lg" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i class="fas fa-times-circle"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">

                        <div class="col-md-12">
                            <form name="EditarUsuario">
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="inputPassword4">Nome</label>
                                        <input type="text" class="form-control" id="Nome" ng-model="Nome" placeholder="Digite seu Nome" value="{{PerfilUsuario.Nome}}" required>
                                        <span ng-class="error" ng-show="EditarUsuario.DataNasci.$error.required">Seu nome é obrigatório</span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="inputEmail4">Email</label>
                                        <input type="email" class="form-control" id="Email" ng-model="Email" placeholder="Digite seu Email" value="{{PerfilUsuario.Email}}" required>
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="inputAddress">RGM</label>
                                    <input type="text" class="form-control" id="RGM" ng-model="RGM" placeholder="Digite seu RGM" value="{{PerfilUsuario.RGM}}" required>
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="DataNasci">Data de Nascimento</label>
                                    <input class="form-control" type="date" ng-model="dataNasci" id="DataNasci" name="DataNasci" placeholder="DataNasci" required  />
                                    <span ng-class="error" ng-show="EditarUsuario.DataNasci.$error.required">DataNasci é obrigatório</span>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <label for="Genero">Genero</label>
                                        <select class="form-control" ng-model="cmbGenero" id="Genero"
                                                ng-options="c.Id as c.Sexo for c in Genero" required>
                                            <option value="" selected="selected" disabled="disabled"> {{Id || 'Sexo'}} </option>
                                        </select>
                                    </div>
                                    <span ng-class="error" ng-show="EditarUsuario.cmbGenero.$error.required">Genero é obrigatório</span>
                                    <div class="form-group col-md-4">
                                        <label for="Curso">Curso</label>
                                        <select class="form-control" ng-model="cmbCurso" id="Curso"
                                                ng-change="carregarSemestre(cmbCurso)"
                                                ng-options="c.Id as c['curso' + Lang] for c in Curso" required>
                                            <option value="" selected="selected" disabled="disabled"> {{Id || 'Curso'}} </option>
                                        </select>
                                        <span ng-class="error" ng-show="EditarUsuario.cmbCurso.$error.required">Curso é obrigatório</span>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="Semestre">Semestre</label>
                                        <select class="form-control" ng-model="selSemestre" id="Semestre"
                                                ng-options="s.Id as s.semestre for s in Semestre" required>
                                            
                                            <option value="" selected="selected" disabled="disabled">{{Id || 'Semestre'}}</option>
                                        </select>
                                        <span ng-class="error" ng-show="EditarUsuario.cmbSemestre.$error.required">Semestre é obrigatório</span>
                                        
                                    </div>
                                </div>
                               

                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" ng-disabled="EditarUsuario.$invalid">Atualizar Perfil</button>
                </div>
            </div>
        </div>
    </div>





</div>



