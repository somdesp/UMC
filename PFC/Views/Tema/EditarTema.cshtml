<div class="row" ng-controller="usuarioCtrl">
    <div class="sub-title">
        <div class="panel-heading"><h2>Lista de Usuario ativos</h2></div>
    </div>
    <table class="table table-bordered">
        <thead style="background-color:#1abc9c;">
            <tr>
                <th>Usuario</th>
                <th>Email</th>
                <th>Curso</th>
                <th>Semestre</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="usu in Usuarios">
                <td>{{usu.Nome}}</td>
                <td>{{usu.Email}}</td>
                <td>{{usu.Curso.curso}}</td>
                <td>{{usu.Semestre.semestre}}</td>
                <td style="width: 200px">
                    <button type="button" data-target="#AtualizarUsuario" class="btn btn-info" data-toggle="modal" ng-click="atualizarUsuarioID(usu)">Editar</button>
                    <button type="button" class="btn btn-danger">Inativar</button>
                </td>
            </tr>
        </tbody>
    </table>


    @* Modal Atualização de usuario*@
    <div class="modal fade alert-heading" id="AtualizarUsuario" role="dialog" ng-controller="usuarioCtrl">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="text-info">Atualizar Usuario</h3>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" name="AtualizarUsuarioForm">
                        <div>
                            <input class="form-control" readonly="readonly" ng-model="id" name="Id" type="hidden" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" ng-model="nome" name="Nome" placeholder="Nome" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" ng-model="email" name="Email" placeholder="Email" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" ng-model="login" name="Login" placeholder="Login" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="date" ng-model="dataNasci" name="DataNasci" placeholder="DataNasci" />
                        </div>
                        <div class="form-group">
                            <select ng-model="cmbGenero"
                                    ng-options="c.Id as c.Sexo for c in Genero">
                                <option value="" selected="selected" disabled="disabled"> {{Id || 'Sexo'}} </option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" ng-model="rgm" name="RGM" placeholder="RGM" />
                        </div>

                        <div class="form-group">
                            <select ng-model="cmbCurso"
                                    ng-change="carregarSemestre(cmbCurso)"
                                    ng-options="c.Id as c.curso for c in Curso">
                                <option value="" selected="selected" disabled="disabled"> {{Id || 'Curso'}} </option>
                            </select>
                        </div>

                        <div class="form-group">
                            <select ng-model="cmbSemestre"
                                    ng-options="s.Id as s.semestre for s in Semestre">
                                >
                                <option value="" selected="selected" disabled="disabled">{{Id || 'Semestre'}}</option>
                            </select>
                        </div>
                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnSalvar"
                            data-dimiss="modal" ng-click="atualizarUsuario()">
                        Atualizar
                    </button>
                </div>
            </div>

            <script src="~/Scripts/angular.js"></script>
            <script src="~/App/Usuario/Module.js"></script>
            <script src="~/App/Usuario/Service.js"></script>
            <script src="~/App/Usuario/Controller.js"></script>


        </div>
    </div>
</div>

@* Fim Modal Atualização de usuario*@

@section scripts{
    <script src="~/App/Usuario/Module.js"></script>
    <script src="~/App/Usuario/Service.js"></script>
    <script src="~/App/Usuario/Controller.js"></script>
}


